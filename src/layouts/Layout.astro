---
import SiteTitle from "@components/Title.astro";

const title = Astro.props ?? "Jan's site";
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <header>
        <SiteTitle />
    </header>

    <body>
        <slot />
    </body>

    <style>
        html,
        body {
            margin: 0;
            width: 100%;
            height: 100%;
        }
    </style>


</html>
